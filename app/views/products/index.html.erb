<h1>Productos</h1>
<div class="table-responsive">
<table class="table">
  <tr>
    <th>Código</th>
    <th>Nombre</th>
    <th>Precio Venta</th>
    <th>Precio Compra</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.code %></td>
    <td><%= product.name %></td>
    <td><%= product.buy_price %></td>
    <td><%= product.sell_price %></td>
    <td><%= link_to 'Mostrar', product, class: "btn btn-default" %></td>
    <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-default" %></td>
    <td><%= link_to 'Eliminar', product, confirm: 'Está seguro?', method: :delete, class: "btn btn-default" %></td>
  </tr>
<% end %>
</table>
<div>
<br />

<%= link_to 'Nuevo Producto', new_product_path, class: "btn btn-large btn-primary" %>
